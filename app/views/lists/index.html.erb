  <div class="cards small-container">
    <% @lists.each do |list| %>
      <div class="mini-cards" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image_link %>)">
        <p><%= link_to list.name, list %></p>
        <div id="absoluteListDelete">
          <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "delete-link" do%>
            <i class="fa-solid fa-trash-can white"></i>
          <% end %>
        </div>
      </div>
    <% end %>

